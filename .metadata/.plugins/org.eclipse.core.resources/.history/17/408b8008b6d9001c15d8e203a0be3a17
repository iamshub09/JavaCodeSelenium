package StarPatten;

public class StarPattens {

	public void patten1() {
		/*
		 * Step 1 : 
		 * i= 1
		 * j= 1
		 * Example : *
		 * 
		 * Step 2 : 
		 * i=2;
		 * J=1;
		 * Example  : *
		 * 
		 * i=2;
		 * J=2;
		 * Example  : *
		 * 			  **
		 * r c
		 * ___
		 * i j
		 * ___
		 * 1 1
		 * 2 2
		 * 3 3
		 * 4 4
		 * 
		 *  
		 * */
		for (int i = 1; i <=4; i++) {
			for (int j = 1; j <=i ; j++) {
				System.out.print("*");
			}
			System.out.println();
		}
	}
	
	
	
	public void patten2() {
		/* 		****
		 * 		***
		 * 		**
		 * 		*
		 * 		
		 * r c
		 * ___
		 * i j
		 * ___
		 * 1 4
		 * 2 3
		 * 3 2
		 * 4 1
		 * 
		 * 
		 * 
		 * */
		
		for (int i = 1; i <=4; i++) {
			for (int j = 4; j >=i ; j--) {
				System.out.print("*");
			}
			System.out.println();
		}
		
	}
	
	
	
	public void patten3() {
		
		for (int i = 1; i <=4; i++) {
			for (int j = 1; j <=i ; j++) {
				System.out.print("*");
			}
			System.out.println();
		}
		
		for (int i = 1; i <=3; i++) {
			for (int j = 3; j >=i ; j--) {
				System.out.print("*");
			}
			System.out.println();
		}
		
	}
	
	
	
	public void patten4() {
		
		/*	   *
		 * 	  **
		 * 	 ***
		 * 	****
		 * 
		 * 
		 * */
		
		for (int i = 1; i <=4; i++) {
		
			for (int j = 3; j >=i ; j--) {
				System.out.print(" ");
			}
			
			for (int k = 1; k<=i ; k++) {
				System.out.print("*");
			}
			System.out.println();
			
			
		}
		
		
		
	}
	
	public void patten5() {
		
	}
	
	
	public static void main(String[] args) {
	StarPattens obj1 = new StarPattens();
	obj1.patten1();
	System.out.println(" ");
	
	obj1.patten2();
	System.out.println(" ");
	
	obj1.patten3();
	System.out.println(" ");
	
	obj1.patten4();
	System.out.println(" ");
	
	}

}
