package StarPatten;

public class Pattens {

	
	/*
	 * 
	 * *
	 * **
	 * ***
	 * ****
	 * 
	 * */
	
	public void patten1() {
		for (int i = 1; i <= 4; i++) {
			for (int j = 1; j <= i; j++) {
				System.out.print("*");
			}
			System.out.println();
		}
	}
	
	/*
	 * 
	 * ****
	 * ***
	 * **
	 * *
	 * 
	 * */
	public void patten2() {
		for (int i = 1; i <= 4; i++) {
			for (int j = 4; j >= i; j--) {
				System.out.print("*");
			}
			System.out.println();
		}
	}
	
	
	/*
	 *   *
	 *   **
	 *   ***
	 *   ****
	 *   ***
	 *   **
	 *   *
	 * */
	public void patten3() {
		for (int i = 1; i <=4; i++) {
			for (int j = 1; j <=i; j++) {
				System.out.print("*");
			}
			System.out.println();
		}
	
		for (int i = 1; i <=3; i++) {
			for (int j = 3; j >=i; j--) {
				System.out.print("*");
			}
			System.out.println();
		}
	
		}
		
	

	/*
	 * 		*
	 * 	   **
	 *    ***
	 *   **** 
	 * */
	public void patten4() {
	
		for (int i = 1; i <=4; i++) {
			
			for(int j = 3; j >=i; j--)
			{
				System.out.print(" ");
			}
			
			for(int k = 1; k <=i; k++)
			{
				System.out.print("*");
			}
			
			System.out.println();
		}
		
	}

	/*
	 * 	****
	 * 	 ***
	 * 	  **
	 * 	   *
	 * 
	 * */
	public void patten5() {
		
		for (int i = 1; i <=4; i++) {
			
			for (int j = 2; j <=i; j++) {
				System.out.print(" ");
			}
			
			for (int k = 4; k >=i; k--) {
				System.out.print("*");
			}
			
			System.out.println();
		}
	}
	
	/*
	 * 		*
	 * 	   **
	 *    ***
	 *   ****
	 *    ***
	 *     **
	 *      * 
	 * */
	public void patten6() {
		
		for (int i = 1; i <=4; i++) {
			
			for(int j = 3; j >=i; j--)
			{
				System.out.print(" ");
			}
			
			for(int k = 1; k <=i; k++)
			{
				System.out.print("*");
			}
			
			System.out.println();
		}
		
		for (int i = 1; i <=3; i++) {
			
			for(int j = 1; j <=i; j++)
			{
				System.out.print(" ");
			}
			
			for(int k = 3; k >=i; k--)
			{
				System.out.print("*");
			}
			System.out.println();
			
		}
		

	}
	
	/*
	 * 		____*
	 * 		___***
	 * 		__*****
	 * 		_*******
	 * 		*********
	 * 
	 * 
	 * */
	public void patten7() {
		for (int i = 1; i <=5; i++) {
			
			for (int j = 4; j >=i; j--) {
				System.out.print(" ");
			}
			
			for (int k = 1; k <=i; k++) {
				System.out.print("*");
			}
			
			for (int l = 2; l <=i; l++) {
				System.out.print("*");
			}
			
			System.out.println();
		}
		
	}
	
	/*
	 * 		____*
	 * 		___***
	 * 		__*****
	 * 		_*******
	 * 		*********
	 * 		 *******
	 * 		  *****
	 * 		   ****
	 *          ***
	 * 			 **	
	 * 
	 * */
	public void patten8() {
		
		for (int i = 1; i <=5; i++) {
			
			for (int j = 4; j >=i; j--) {
				System.out.print(" ");
			}
			
			for (int k = 1; k <=i; k++) {
				System.out.print("*");
			}
			
			for (int l = 2; l <=i; l++) {
				System.out.print("*");
			}
			
			System.out.println();
		}

		for (int i = 1; i <=4; i++) {
			for (int j = 2; j <=i; j++) {
				System.out.print(" ");
			}
			
			for (int j = 4; j >=i; j--) {
				System.out.print("*");
			}
			
			for (int j = 3; j >=i; j--) {
				System.out.print("*");
			}
			System.out.println();
		}


	}

}
